<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.onnway.onnway">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <application
        android:name="com.onnway.onnway.networking.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.onnway.onnway.KYC3"
            android:screenOrientation="portrait"/>
        <activity android:name="com.onnway.onnway.KYC2"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.onnway.onnway.OrderDetails5"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.OrderDetails4"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.Checkout"
            android:screenOrientation="portrait">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name="com.onnway.onnway.Feedback"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.OrderDetails3"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.MapsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.Web"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.EditProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.PayNow"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.KYC"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.GetProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.OrderDetails2"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.OrderDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.Address3"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.MaterialActivity2"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.Address2"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.Address1"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.Shipment"
            android:screenOrientation="portrait" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="com.onnway.onnway.userprofile.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.partload.PartLoadSpaceSelect"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.materialtype.MaterialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.userprofile.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.shippingaddress.ShippingAddress"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.shipmentdetails.ShipmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.GettingStarted"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.otp.EnterNumberActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.onnway.onnway.trucklist.GetMoreTruckDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.trucklist.AvailableTruckList"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.addprofiledetails.FirstTimeProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.otp.OtpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.otp.NumberActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.onnway.onnway.splash.SplashActivity"
            android:screenOrientation="portrait" />

        <activity-alias
            android:name=".LauncherActivity"
            android:label="@string/app_name"
            android:targetActivity="com.onnway.onnway.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.onnway.onnway.MainActivity"
            android:screenOrientation="portrait" />

        <receiver
            android:name="swarajsaaj.smscodereader.receivers.OtpReader"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.onnway.onnway.MyFirebaseMessagingService"
            android:permission="">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/loggg" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <!--
 Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
    </application>

</manifest>