<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mukul.onnwayloader">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <application
        android:name="com.mukul.onnwayloader.networking.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mukul.onnwayloader.Address1"/>
        <activity android:name="com.mukul.onnwayloader.Shipment"/>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name="com.mukul.onnwayloader.userprofile.ProfileActivity" />
        <activity android:name="com.mukul.onnwayloader.partload.PartLoadSpaceSelect" />
        <activity android:name="com.mukul.onnwayloader.materialtype.MaterialActivity" />
        <activity android:name="com.mukul.onnwayloader.userprofile.UserProfileActivity" />
        <activity android:name="com.mukul.onnwayloader.shippingaddress.ShippingAddress" />
        <activity android:name="com.mukul.onnwayloader.shipmentdetails.ShipmentActivity" />
        <activity android:name="com.mukul.onnwayloader.GettingStarted" />
        <activity
            android:name="com.mukul.onnwayloader.otp.EnterNumberActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.mukul.onnwayloader.trucklist.GetMoreTruckDetails" />
        <activity android:name="com.mukul.onnwayloader.trucklist.AvailableTruckList" />
        <activity
            android:name="com.mukul.onnwayloader.addprofiledetails.FirstTimeProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mukul.onnwayloader.otp.OtpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mukul.onnwayloader.otp.NumberActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mukul.onnwayloader.splash.SplashActivity"
            android:screenOrientation="portrait" />

        <activity-alias
            android:name=".LauncherActivity"
            android:label="@string/app_name"
            android:targetActivity="com.mukul.onnwayloader.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDg928l41AL20avLOGqYVVHHYHyNTM3DMY" />

        <activity android:name="com.mukul.onnwayloader.MainActivity" />

        <receiver
            android:name="swarajsaaj.smscodereader.receivers.OtpReader"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".MyFirebaseMessagingService"
            android:permission="">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/loggg" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <!--
 Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

    </application>

</manifest>